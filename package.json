{
  "name": "emcsec-desktop",
  "version": "1.0.2",
  "author": "Aspanta Limited",
  "description": "Emercoin Secure Wallet",
  "license": "GPLv3",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:all": "node .electron-vue/build.js && electron-builder -mwl",
    "build:win32": "node .electron-vue/build.js && electron-builder --win --x64 --ia32",
    "build:linux": "node .electron-vue/build.js && electron-builder --linux",
    "build:mac": "node .electron-vue/build.js && electron-builder --mac --prepackaged build",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "postinstall": "npm run lint:fix"
  },
  "build": {
    "productName": "Emercoin Secure Wallet",
    "appId": "com.aspanta.emcsec-desktop",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "mac": {
      "icon": "build/icons/icon.icns",
      "target": "zip",
      "artifactName": "EmcSec-${version}-MacOS.${ext}"
    },
    "win": {
      "icon": "build/icons/icon"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Office"
    },
    "nsis": {
      "artifactName": "EmcSec-${version}-Windows.${ext}",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "appImage": {
      "artifactName": "EmcSec-${version}-Linux-${arch}.${ext}"
    }
  },
  "dependencies": {
    "axios": "^0.16.1",
    "babel-runtime": "^6.26.0",
    "bip39": "^2.4.0",
    "bitcoinjs-lib": "^3.3.0",
    "bitcore-bip39": "^0.16.0",
    "bitcore-lib": "^0.14.0",
    "bootstrap": "^3.3.7",
    "bs58": "^4.0.1",
    "dom-to-image": "^2.6.0",
    "electrum-client": "0.0.4",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "level-js": "^2.2.4",
    "linvodb3": "^3.25.1",
    "moment": "^2.19.2",
    "net": "^1.0.2",
    "node-notifier": "^5.1.2",
    "qrcode.vue": "^1.5.1",
    "sweetalert2": "^7.0.7",
    "unorm": "^1.4.1",
    "vee-validate": "^2.0.0-rc.23",
    "vue": "^2.5.8",
    "vue-electron": "^1.0.6",
    "vue-inputmask": "^0.2.1",
    "vue-router": "^2.8.1",
    "vue-slider-component": "^2.4.5",
    "vue-spinner": "^1.0.3",
    "vuex": "^2.5.0"
  },
  "devDependencies": {
    "7zip-bin-linux": "^1.2.0",
    "ajv": "^5.4.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^1.1.3",
    "chalk": "^2.3.0",
    "copy-webpack-plugin": "^4.2.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.8.1",
    "electron-builder": "^19.46.3",
    "electron-canvas-to-buffer": "^2.0.0",
    "electron-context-menu": "^0.9.1",
    "electron-debug": "^1.4.0",
    "electron-devtools-installer": "^2.2.1",
    "electron-download-tf": "^4.3.4",
    "electron-json-storage": "^3.2.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "material-design-icons": "^3.0.1",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^12.2.2",
    "vue-style-loader": "^3.0.3",
    "vue-template-compiler": "^2.5.8",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-hot-middleware": "^2.20.0"
  }
}
